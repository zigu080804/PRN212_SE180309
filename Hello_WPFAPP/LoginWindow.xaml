<Window x:Class="Hello_WPFAPP.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_WPFAPP"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Màn Hình đăng nhập" Margin="0,124,314,0" VerticalAlignment="Top" Grid.Column="3" Height="26" Foreground="#FF4E5B3C" Background="#FFB9B2B2"/>
        <Button x:Name="btnLogin" Grid.Column="3" Content="Đăng nhập" HorizontalAlignment="Left" Margin="1,252,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.52,0.539" Width="119" Height="30" FontSize="20" Click="btnLogin_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.17"/>
                    <TranslateTransform X="0.015" Y="-0.033"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnThoat" Grid.Column="3" Content="Thoát" HorizontalAlignment="Left" Margin="154,252,0,0" VerticalAlignment="Top" Width="66" Height="29" FontSize="20" Click="btnThoat_Click"/>
        <TextBox x:Name="txtUsername" Grid.Column="3" HorizontalAlignment="Left" Margin="100,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="3" Content="Username" HorizontalAlignment="Left" Margin="0,168,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="3" Content="Password" HorizontalAlignment="Left" Margin="0,200,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Grid.Column="3" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center" Width="120"/>
        <Canvas Grid.ColumnSpan="3"/>

    </Grid>
</Window>
